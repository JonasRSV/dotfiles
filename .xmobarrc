Config { font = "xft:SFNS Display:size=10,FontAwesome:size=10"
        , borderColor = "black"
        , border = NoBorder
        , bgColor = "#080a10"
        , fgColor = "grey"
        , alpha=220 
        , position = TopW L 100
        , overrideRedirect = True,
        , allDesktops = True,
        , hideOnStart = False,
        , persistent = True,
        , commands = [ 
            Run Wireless "wlp58s0"     [ "--template" , "<ssid>: <quality>"
                                       , "--low"      , "red"
                                       , "--normal"   , "orange"
                                       , "--high"     , "green"
               ] 10
          , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
          , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
          , Run Battery        [ "--template" , "Batt: <acstatus>"
                               , "--Low"      , "10"        -- units: %
                               , "--High"     , "80"        -- units: %
                               , "--low"      , "red"
                               , "--normal"   , "orange"
                               , "--high"     , "green"

                               , "--" -- battery specific options
                               -- discharging status
                               , "-o"	, "<left>% (<timeleft>)"
                               -- AC "on" status
                               , "-O"	, "<fc=#dAA520>Charging</fc>"
                               -- charged status
                               , "-i"	, "<fc=#00A000>Charged</fc>"
                             ] 50
            -- network activity monitor (dynamic interface resolution)
            , Run DynNetwork     [ "--template" , "<dev>: <tx>kB/s|<rx>kB/s"
                                 , "--Low"      , "1000"       -- units: B/s
                                 , "--High"     , "5000"       -- units: B/s
                                 , "--low"      , "green"
                                 , "--normal"   , "orange"
                                 , "--high"     , "red"
                 ] 10
                       -- cpu core temperature monitor
            , Run CoreTemp       [ "--template" , "Temp: <core0>째C|<core1>째C"
                                 , "--Low"      , "70"        -- units: 째C
                                 , "--High"     , "80"        -- units: 째C
                                 , "--low"      , "green"
                                 , "--normal"   , "orange"
                                 , "--high"     , "red"
                                 ] 50

            , Run StdinReader
				]
        , sepChar = "%"
        , alignSep = "}{"
        , template =  " %coretemp% | %battery% | %cpu% | <action=`termite -e nmtui` button=12345>%wlp58s0wi%</action> on %dynnetwork%} %StdinReader% {  <fc=#38bf71>%date%</fc> "
        }
