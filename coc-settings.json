{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "cquery": {
      "command": "cquery",
      "args": ["--log-file=/tmp/cq.log"],
      "filetypes": ["c", "cpp"],
      "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cacheDirectory": "/tmp/cquery"
      }
    },
    "golang": {
      "command": "go-langserver",
      "filetypes": ["go"],
      "initializationOptions": {
        "gocodeCompletionEnabled": true,
        "diagnosticsEnabled": true,
        "lintTool": "golint"
      }
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
//    "python": {
//      "command": "pyls",
//      "filetypes": ["py", "python"]
//    },
    "javascript": {
      "command": "node",
      "args": ["/Users/jonval/WARNING/LSPS/javascript-typescript-langserver/lib/language-server-stdio"],
      "filetypes": ["javascript", "javascriptreact", "js"]
    },
    "java": {
      "command": "/Users/jonval/WARNING/LSPS/java-language-server/dist/mac/bin/launcher",
      "args": ["--quiet"],
      "filetypes": ["java"]
    }
  },
  "coc.preferences.useQuickfixForLocations": true,
  "pyls.plugins.pyflakes.enabled": false
}
